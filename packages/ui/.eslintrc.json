{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "tsconfigRootDir": ".",
    "project": ["./tsconfig.json"]
  },
  "env": {
    "browser": true, // UI components often run in the browser
    "es2022": true
  },
  "ignorePatterns": ["node_modules/", "dist/", "*.js", "*.cjs", "*.mjs"],
  "rules": {
    
  }
}
